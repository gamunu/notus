@model Notus.Hub.Models.RegisterViewModel
@{
    ViewBag.Title = "Create an account";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <h2>@ViewBag.Title.</h2>
            <p>
                You can use any email address as the user name for your new Notus account,
                including addresses from Outlook.com, Yahoo! or Gmail. If you already sign in to a Windows PC, tablet, or phone, Xbox Live, Outlook.com,
                or OneDrive, use that account to @Html.ActionLink("sign in", "Index", "Home").
            </p>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FirstName, new Dictionary<string, object> { { "class", "form-control" }, { "title", "Your name will appear to your friends, co-workers, family, and others in the Notus services you use" }, { "data-toggle", "tooltip" }, { "data-placement", "right" } })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.LastName, new Dictionary<string, object> { { "class", "form-control" }, { "title", "Your name will appear to your friends, co-workers, family, and others in the Notus services you use" }, { "data-toggle", "tooltip" }, { "data-placement", "right" } })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> { { "class", "form-control" }, { "title", "Use your favorite email address as your Notus account to sign in to all Notus services." }, { "data-toggle", "tooltip" }, { "data-placement", "right" }, { "placeholder", "someone@example.com" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new Dictionary<string, object> { { "class", "form-control" }, { "title", "Passwords must have at least 8 characters and contain at least two of the following: uppercase letters, lowercase letters, numbers, and symbols." }, { "data-toggle", "tooltip" }, { "data-placement", "right" } })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Country, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Country, ViewBag.Country as IEnumerable<SelectListItem>, "Country", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.BirthMonth, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.BirthMonth, ViewBag.BirthMonth as IEnumerable<SelectListItem>, "Month", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BirthMonth, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.BirthDay, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.BirthDay, ViewBag.BirthDay as IEnumerable<SelectListItem>, "Day", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BirthDay, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.BirthYear, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.BirthYear, ViewBag.BirthYear as IEnumerable<SelectListItem>, "Year", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BirthYear, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Gender, ViewBag.Gender as IEnumerable<SelectListItem>, "Gender", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3>Help us protect your info</h3>
                        <p>Your phone number helps us keep your account secure.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new Dictionary<string, object> { { "class", "form-control" }, { "title", "Your phone number helps us keep your account secure. We'll send a verification code as a text message or an automated call if we need to verify your identity." }, { "data-toggle", "tooltip" }, { "data-placement", "right" } })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input type="submit" class="btn btn-primary btn-block btn-fill" value="Create account" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>